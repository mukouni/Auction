@using Auction.Models
@model Auction.Models.InquiryViewModel
<!DOCTYPE html>
<html lang="en" style="height:100%;width:100%;">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>56OOG-Mail</title>
</head>
<body style="height:100%;width:100%; font-size: 18px">
    <div style="width:800px;height:100%;background-color:#0094ff;margin: 0 auto;">
        <div style="border-bottom: 1px solid white;">
            <img src="http://39.97.180.150/images/56ooglogo.svg" style="height:40px;margin:10px 10px 0 10px;">
        </div>
        <div style="background-color:#0094ff;">&nbsp;</div>
        <div style="height:100%;width:90%;margin:0 auto;color:white;background-color:#0094ff;">
            <div style="background-color:#0094ff;">
                <table width="100%" border="0" cellpadding="0" cellspacing="0">
                    <tr height="30px">
                        <td style="background-color:#0094ff;color:white;" width="20%">客户名称：</td>
                        <td style="background-color:#0094ff;color:white;" width="30%">@Model.UserName</td>
                        <td style="background-color:#0094ff;color:white;" width="20%">出运日期：</td>
                        @if(Model.ShipmentTime != null){
                            <td style="background-color:#0094ff;color:white;">@Model.ShipmentTime.Value.ToString("yyyy-MM-dd")</td>
                        }else{
                            <td style="background-color:#0094ff;color:white;"></td>
                        }
                    </tr>
                    <tr height="30px">
                        <td style="background-color:#0094ff;color:white;">电 话：</td>
                        <td style="background-color:#0094ff;color:white;">@Model.Tel</td>
                        <td style="background-color:#0094ff;color:white;" width="100px">起 运 港：</td>
                        <td style="background-color:#0094ff;color:white;">@Model.StartDeparture</td>
                    </tr>
                    <tr height="30px">
                        <td style="background-color:#0094ff;color:white;">Email：</td>
                        <td style="background-color:#0094ff;color:white;">@Model.Email</td>
                        <td style="background-color:#0094ff;color:white;" width="100px">目 的 港：</td>
                        <td style="background-color:#0094ff;color:white;">@Model.EndDeparture</td>
                    </tr>
                </table>
            </div>
            <div style="background-color:#0094ff;">&nbsp;</div>
            <div style="text-align: center;background-color:#0094ff;">
                <span style="font-size:20px;">货 盘 信 息</span>
            </div>
            <div style="background-color:#0094ff;">&nbsp;</div>
            <div style="background-color:#0094ff;">
                <table width="100%" border="0" style="font-size:14px;border-collapse: collapse;margin: 0 auto;text-align: center;">
                    <thead>
                        <tr style="border: 1px solid #cad9ea;color: #666;height: 30px;">
                            <th style="width:20%;border: 1px solid #cad9ea;color: #666;height: 30px;background-color: #CCE8EB;">柜型</th>
                            <th style="width:10%;border: 1px solid #cad9ea;color: #666;height: 30px;background-color: #CCE8EB;">柜量</th>
                            <th style="width:50%;border: 1px solid #cad9ea;color: #666;height: 30px;background-color: #CCE8EB;">尺寸</th>
                            <th style="width:20%;border: 1px solid #cad9ea;color: #666;height: 30px;background-color: #CCE8EB;">货重</th>
                        </tr>
                    </thead>
                    @foreach(var item in @Model.Cabinets){
                    <tr style="border: 1px solid #cad9ea;color: #666;height: 30px;">
                        <td style="background-color:#0094ff;width:20%;border: 1px solid #cad9ea;height: 30px;color: white;">@item.CabinetType</td>
                        <td style="background-color:#0094ff;width:10%;border: 1px solid #cad9ea;height: 30px;color: white;">@item.CabinetCount</td>
                        <td style="background-color:#0094ff;width:50%;border: 1px solid #cad9ea;height: 30px;color: white;">@item.CabinetLength @item.CabinetLengthUnit × @item.CabinetWidth @item.CabinetWidthUnit × @item.CabinetHeight @item.CabinetHeight × @item.CabinetHeightUnit</td>
                        <td style="background-color:#0094ff;width:20%;border: 1px solid #cad9ea;height: 30px;color: white;">@item.CabinetWeight @item.CabinetWeightUnit</td>
                    </tr>
                    }
                </table>
            </div>
            <div style="background-color:#0094ff;">&nbsp;</div>
            <div style="background-color:#0094ff;">
                <span>普通货柜:@Model.Gp20 × @Html.DisplayNameFor(m=> m.Gp20), @Model.Gp40 × @Html.DisplayNameFor(m=> m.Gp40), @Model.Hc40 × @Html.DisplayNameFor(m=> m.Hc40)</span>
            </div>
            <div style="background-color:#0094ff;">&nbsp;</div>
            <div style="background-color:#0094ff;">
                @{
                    var services = new List<string>();
                    if(!String.IsNullOrEmpty(Model.MotorcycleFactory)){
                        services.Add(Model.MotorcycleFactory);
                    }
                    if(!String.IsNullOrEmpty(Model.WarehouseLoading)){
                        services.Add(Model.WarehouseLoading);
                    }
                    if(!String.IsNullOrEmpty(Model.HomeLashing)){
                        services.Add(Model.HomeLashing);
                    }
                    if(!String.IsNullOrEmpty(Model.CustomsDeclaration)){
                        services.Add(Model.CustomsDeclaration);
                    }
                    var servicestr = String.Join(" ", services);
                }
                <span>
                    港前服务:  @servicestr
                </span>
            </div>
            <div style="background-color:#0094ff;">&nbsp;</div>
            <div style="background-color:#0094ff;">&nbsp;</div>
        </div>
    </div>
</body>
</html>