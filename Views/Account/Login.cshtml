@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "登陆";
}

<div class="body row justify-content-center align-content-center">
    <div class="login d-flex flex-column justify-content-center align-items-center">
        <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
            <h3 class="mt-3 mb-4 text-center">用户登录</h3>

            <div asp-validation-summary="All" class="text-danger"></div>

            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">手机号：</span>
                </div>
                <input asp-for="PhoneNumber" class="form-control" placeholder="PhoneNumber"/>
            </div>
            
            <span asp-validation-for="Password" class="text-danger"></span>
            <div class="d-flex">
                <a asp-controller="Account" asp-action="forgotpassword" class="text-white ml-auto">忘记密码？</a>
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">密&nbsp;&nbsp;&nbsp;码：</span>
                </div>
                <input asp-for="Password" class="form-control" placeholder="Password"/>
            </div>
            <div class="form-check form-check-inline text-right">
                <div class="checkbox">
                    <label asp-for="RememberMe" class="me form-check-label">
                        <input asp-for="RememberMe" class="form-check-input"/>
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>
            <div class="d-flex justify-content-between">
                <a asp-controller="Account" asp-action="Register" class="text-white" style="line-height: 38px;">注册</a>
                <button type="submit" class="btn btn-primary">登&nbsp;&nbsp;&nbsp;&nbsp;录</button>
            </div>
        </form>
    </div>
</div>

@section script {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
