@model IndexViewModel
@{
    ViewData["Title"] = "用户设置";
    Layout = "_ManageLayout";
}
<div class="body row justify-content-center align-content-center">
    <div class="login d-flex flex-column justify-content-center align-items-center">
        <form asp-controller="Manage" asp-action="ChangePassword" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
            <h3 class="mt-3 mb-4 text-center">修改密码</h3>
                <div asp-validation-summary="All" class="text-danger"></div>
                
                <span asp-validation-for="ChangePassword.OldPassword" class="text-danger"></span>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">旧密码：</span>
                    </div>
                    <input asp-for="ChangePassword.OldPassword" class="form-control"/>
                </div>
                
                <span asp-validation-for="ChangePassword.NewPassword" class="text-danger"></span>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">新密码：</span>
                    </div>
                    <input asp-for="ChangePassword.NewPassword" class="form-control"/>
                </div>

                <span asp-validation-for="ChangePassword.ConfirmPassword" class="text-danger"></span>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">确认密码：</span>
                    </div>
                    <input asp-for="ChangePassword.ConfirmPassword" class="form-control"/>
                </div>

                <div class="text-right">
                    <button type="submit" class="btn btn-primary m">提交</button>
                </div>
        </form>
    </div>
</div>
